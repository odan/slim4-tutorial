{
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^1",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4 | ^9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
    }
}
